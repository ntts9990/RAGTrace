# =====================================================
# RAGTrace Environment Configuration
# =====================================================
# Copy this file to .env and fill in your API keys

# =====================================================
# LLM API Keys (Required)
# =====================================================

# Google Gemini API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Naver CLOVA Studio API Key (OPTIONAL - for HCX support)
# Get your API key from: https://www.ncloud.com/product/aiService/clovaStudio
CLOVA_STUDIO_API_KEY=your_clova_studio_api_key_here

# =====================================================
# LLM Model Configuration
# =====================================================

# Default LLM to use (gemini or hcx)
DEFAULT_LLM=gemini

# Gemini Model Settings
GEMINI_MODEL_NAME=models/gemini-2.5-flash-preview-05-20
GEMINI_EMBEDDING_MODEL_NAME=models/gemini-embedding-exp-03-07
GEMINI_REQUESTS_PER_MINUTE=30

# HCX Model Settings
HCX_MODEL_NAME=HCX-005
HCX_REQUESTS_PER_MINUTE=30

# Embedding API Settings
EMBEDDING_REQUESTS_PER_MINUTE=30

# =====================================================
# Prompt Customization
# =====================================================

# Default prompt type (default, korean_tech, multilingual_tech)
DEFAULT_PROMPT_TYPE=default

# CLI prompt type override (optional)
# RAGAS_PROMPT_TYPE=korean_tech

# =====================================================
# Database Configuration
# =====================================================

# SQLite database URL for evaluation history
DATABASE_URL=sqlite:///data/db/ragas_evaluation_history.db

# =====================================================
# Logging Configuration
# =====================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =====================================================
# Advanced Settings (Optional)
# =====================================================

# Enable custom prompts by default
# ENABLE_CUSTOM_PROMPTS=true

# Override specific model configurations
# GEMINI_TEMPERATURE=0.1
# HCX_TEMPERATURE=0.5